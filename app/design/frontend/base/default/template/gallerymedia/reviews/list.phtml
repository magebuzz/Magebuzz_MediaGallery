): ?>      <?php echo $this->__('Please ') ?><a      href="<?php echo $this->getUrl('gallerymedia/review/login', array('id' => $_mediaId)) ?>" title="Login">        Login</a><?php echo $this->__(' to add review') ?>    <?php else: ?>      <?php echo $this->getChildHtml('review_form') ?>    <?php endif; ?>  <?php else: ?>    <?php echo $this->getChildHtml('review_form') ?>  <?php endif; ?></div>	